{
  "name": "@cowlick/kag-compiler",
  "version": "0.12.0",
  "description": "cowlick kag compiler",
  "main": "lib/index.js",
  "bin": {
    "cowlick-kag-compiler": "./bin/run"
  },
  "files": [
    "bin",
    "lib",
    "resources"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -p ./tsconfig.cli.json && npm run pegjs",
    "test": "jest",
    "pegjs": "pegjs --output ./resources/kag.js ./resources/kag.pegjs"
  },
  "author": "pocketberserker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cowlick/cowlick.git"
  },
  "dependencies": {
    "@cowlick/analyzer": "^0.12.0",
    "@cowlick/core": "^0.11.0",
    "acorn": "6.1.1",
    "commandpost": "1.4.0",
    "estraverse": "4.2.0",
    "ora": "3.4.0"
  },
  "devDependencies": {
    "@akashic/akashic-engine": "2.4.14",
    "@types/acorn": "4.0.5",
    "@types/escodegen": "0.0.6",
    "@types/esprima": "4.0.2",
    "@types/estraverse": "0.0.6",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.15",
    "@types/node": "10.12.18",
    "@types/ora": "3.2.0",
    "esprima": "4.0.1",
    "jest": "24.8.0",
    "pegjs": "0.10.0",
    "ts-jest": "24.0.2",
    "typescript": "3.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
