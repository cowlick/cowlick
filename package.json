{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "cowlick",
  "description": "Novel engine for Akashic",
  "scripts": {
    "prepare": "lerna bootstrap",
    "publish": "lerna publish",
    "test": "lerna run test",
    "build": "lerna run build",
    "prettier": "prettier --write '**/*.ts'",
    "sample:bundle": "cd ./examples && npm run bundle",
    "sample:publish": "gh-pages -d ./dist -m \"Update $(date +%Y-%m-%d:%H:%M:%s)\"",
    "start": "cd ./examples && npm start",
    "precommit": "lint-staged"
  },
  "author": "pocketberserker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cowlick/cowlick.git"
  },
  "devDependencies": {
    "gh-pages": "2.0.1",
    "husky": "1.2.0",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": false
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
